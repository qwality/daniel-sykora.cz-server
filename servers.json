{
    "servers": {
        "this": {
            "commands": {
                "update": "git pull && cp nginx/nginx.conf /etc/nginx/nginx.conf && echo 'this.updated'"
            }
        },
        "nginx": {
            "commands": {
                "start": "nginx",
                "stop": "nginx -s stop",
                "restart": "nginx -s reload"
            }
        }
    }
}